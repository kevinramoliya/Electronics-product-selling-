@{
	ViewData["Title"] = "Category Add";
	Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@model ECommerce.Areas.Category.Models.CategoryModel


<div class="main" id="main">
	<div class="body">

		<form method="post" asp-area="Category" asp-controller="Category" asp-action="CategorySave">
			@Html.HiddenFor(x => x.CategoryID)
			<div class="mb-3">
				<div class="mt-3 mb-3">
					<h3> Category Add / Update Page</h3>
				</div>
				<div class="mb-3 row form-group">
					<label class="col-sm-2 col-form-label">Category Name</label>
					<div class="col-xl-4">
						<input type="text" name="CategoryName" asp-for="CategoryName" class="form-control" id="formGroupExampleInput" placeholder="Enter Category Name">
						<span asp-validation-for="CategoryName" class="text-danger"></span>

					</div>
				</div>
			</div>
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label">Category Discription</label>
				<div class="col-xl-4">
					<input type="text" name="Description" asp-for="Description" class="form-control" id="formGroupExampleInput2" placeholder="Enter Discription ">
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>
			<div class="row">
				<div class="col-1 my-2 me-2">
					<button class="btn btn-success" type="submit">Save</button>

				</div>
				<div class="col-10 my-2">
					<a class="btn btn-primary" asp-action="CategoryList">Back</a>
				</div>
			</div>

		</form>
	</div>
</div>